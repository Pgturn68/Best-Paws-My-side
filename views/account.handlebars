{{#if posts.length}}
<section>
    <h2>{{user.username}} Posts</h2>
        {{#each posts as |post|}}
            {{> account-postinfo post}}
        {{/each}}
</section>
{{/if}}

<button type='submit' class='btn'>
    <a class='link' href='/account/new'>Add New Post</a>
</button>

<script src='/js/add-post.js'></script>